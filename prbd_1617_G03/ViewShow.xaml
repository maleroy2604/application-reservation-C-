<f:UserControlBase  x:Class="prbd_1617_G03.ViewShow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:f="clr-namespace:PRBD_Framework;assembly=PRBD_Framework"
        xmlns:local="clr-namespace:prbd_1617_G03.Properties"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity" 
        mc:Ignorable="d"
        Height="300" Width="300">
    <StackPanel Margin="10">
        <TextBlock Text="Discover Exceptional Shows" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,6"/>
        <TextBlock Text="Browse the complete catalog and open any show to view details and reservations." TextWrapping="Wrap" Margin="0,0,0,10" Foreground="#555"/>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBox Text="{Binding Filter, UpdateSourceTrigger=PropertyChanged}" Width="220" ToolTip="Search by show name or description"/>
            <Button Content="Clear" Command="{Binding ClearFilterCommand}" Margin="8,0,0,0"/>
        </StackPanel>
        <ListView x:Name="ListView" ItemsSource="{Binding Shows}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDoubleClick">
                    <i:InvokeCommandAction Command="{Binding ShowDisplayCommand}"
                                        CommandParameter="{Binding ElementName=ListView, Path=SelectedItem}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="2">
                        <TextBlock FontSize="14" FontWeight="SemiBold" Text="{Binding showName}" />
                        <TextBlock FontSize="12" Foreground="#666" Text="{Binding description}" TextTrimming="CharacterEllipsis" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Content="Create New Show" Command="{Binding NewShowCommand}" Margin="0,10,0,0" HorizontalAlignment="Left" Visibility="{Binding AdminVisible}"/>
        <TextBlock x:Name="textBlock" TextWrapping="Wrap" Margin="0,8,0,0" Foreground="#666"
                   Text="Tip: Double-click a show to open its detailed reservation dashboard."/>
    </StackPanel>

</f:UserControlBase>
