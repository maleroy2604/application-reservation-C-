        <DatePicker HorizontalAlignment="Left" Margin="104,37,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.474,-0.147"/>
        <Image x:Name="image1" HorizontalAlignment="Left" Height="100" Margin="103,204,0,-4" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="button" Content="Save" HorizontalAlignment="Left" Margin="215,221,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>

    </Grid>
</f:UserControlBase>
